{
  "name": "asmr-collections",
  "version": "0.3.7",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",
    "lint": "eslint .",
    "web:dev": "pnpm --filter @asmr-collections/web dev",
    "server:dev": "pnpm --filter @asmr-collections/server dev",
    "web:build": "pnpm --filter @asmr-collections/web build",
    "server": "pnpm --filter @asmr-collections/server start",
    "server:build": "pnpm web:build",
    "server:build-start": "pnpm server:build && pnpm --filter @asmr-collections/server start",
    "server:generate": "pnpm --filter @asmr-collections/server generate",
    "server:migration": "pnpm --filter @asmr-collections/server migration:deploy",
    "server:migration:dev": "pnpm --filter @asmr-collections/server migration:dev",
    "server:status": "pnpm --filter @asmr-collections/server status",
    "typecheck": "tsc -b --noEmit",
    "release": "pnpx bumpp --no-push -r",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-kaho": "4.0.4",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.9.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "8.0.0-beta.0"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && pnpm typecheck"
  },
  "lint-staged": {
    "src/**/*.{js,cjs,mjs,ts,cts,mts}": [
      "eslint --fix"
    ],
    "*.json": [
      "eslint --fix"
    ]
  }
}

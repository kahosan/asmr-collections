{
  "name": "asmr-collections",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r run dev",
    "lint": "eslint .",
    "website:dev": "pnpm --filter @asmr/website run dev",
    "server:dev": "pnpm --filter @asmr/server run dev",
    "website:build": "pnpm --filter @asmr/website run build",
    "server": "pnpm --filter @asmr/server run start",
    "server:build": "rm -rf ./server/dist && pnpm run build && mv ./website/dist ./server",
    "server:build-start": "rm -rf ./server/dist && pnpm run build && mv ./website/dist ./server && pnpm --filter @asmr/server run start",
    "server:generate": "pnpm --filter @asmr/server run generate",
    "server:migration": "pnpm --filter @asmr/server run migration:deploy",
    "server:migration:dev": "pnpm --filter @asmr/server run migration:dev",
    "server:status": "pnpm --filter @asmr/server run status",
    "typecheck": "pnpm -r run typecheck",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@eslint-sukka/react": "7.3.5",
    "@types/node": "^24.8.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "eslint": "^9.33.0",
    "eslint-config-kaho": "3.7.7",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@vidstack/react@1.12.11": "patches/@vidstack__react@1.12.11.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm typecheck"
  },
  "lint-staged": {
    "src/**/*.{js,cjs,mjs,ts,cts,mts}": [
      "eslint --fix"
    ],
    "package.json": [
      "eslint --fix"
    ]
  }
}
